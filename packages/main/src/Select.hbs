<div
	class="ui5-select-root"
	dir="{{effectiveDir}}"
	id="{{_id}}-select"
>
	<select
		class="ui5-select-hidden-select"
		id="{{_id}}-hidden-select"
		value="{{_curentValue}}"
		@keydown="{{_onkeydown}}"
		@mousedown="{{_nativeSelectMouseDown}}"
		@keyup="{{_onkeyup}}"
		@focusin="{{_onfocusin}}"
		@focusout="{{_onfocusout}}"
		@click="{{_toggleRespPopover}}"
		tabindex="{{tabIndex}}"
		aria-haspopup="listbox"
		aria-label="{{ariaLabelText}}"
		aria-describedby="{{valueStateTextId}}"
		aria-disabled="{{isDisabled}}"
		aria-required="{{required}}"
		aria-expanded="{{_isPickerOpen}}"
		>
		{{#each _syncedOptions}}
			<option value="{{this.textContent}}" ?selected="{{this.selected}}">{{this.textContent}}</option>
		{{/each}}
	</select>
	<div class="ui5-select-label-root">
		<ui5-label>{{_text}}</ui5-label>
	</div>

	<ui5-icon
		name="slim-arrow-down"
		input-icon
		?pressed="{{_iconPressed}}"
		dir="{{effectiveDir}}"
	></ui5-icon>

	{{#if hasValueState}}
		<span id="{{_id}}-valueStateDesc" class="ui5-hidden-text">{{valueStateText}}</span>
	{{/if}}
	<slot name="formSupport"></slot>
</div>
